#!/bin/sh

set -e

NAME=$(basename $0)
SOURCE=~wrfhelp/SOURCE_CODE/WRFV3.9.1.1.TAR.gz
OUTDIR=~/work/WRFs/$NAME

module purge
module load ncarenv/1.2
module load intel/18.0.1
module load ncarcompilers/0.4.1
module load mpt/2.18
module load netcdf/4.6.0
module save $NAME

# 15 = dmpar - INTEL (ifort/icc)
# 1 = basic
../../scripts/compile_wrf --source $SOURCE --outdir $OUTDIR \
                          --compile 15 --nest 1

module restore
